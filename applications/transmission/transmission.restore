#!/bin/bash

if [ "$#" -ne 4 ]
  then
    echo "Usage: kirios install transmission <name> <downloads_folder> <web_port> <udp_connection_port>"
    echo "Example: kirios install transmission rarbg \"/home/transmission\" 9091 51480"
    exit 1
fi

NAME=$1

kirios uninstall transmission $NAME
volumerize restore transmission "transmission_"$NAME"_config"
volumerize restore transmission "transmission_"$NAME"_watch"
kirios install transmission $#